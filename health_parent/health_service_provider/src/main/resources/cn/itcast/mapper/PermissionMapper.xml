<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.mapper.PermissionMapper">
    <select id="findByRoleId" parameterType="int" resultType="cn.itcast.pojo.Permission">
        SELECT * FROM t_permission WHERE id IN (SELECT permission_id FROM t_role_permission WHERE role_id = #{roleId})
    </select>
</mapper>